# =====================================================
# 生产环境配置模板
# 复制此文件为 application-prod.yml 并填入真实值
# =====================================================

spring:
  datasource:
    url: jdbc:mysql://${DB_HOST:localhost}:${DB_PORT:3306}/${DB_NAME:db_blog}?useUnicode=true&useSSL=true&serverTimezone=Asia/Shanghai
    username: ${DB_USERNAME:root}
    password: ${DB_PASSWORD:changeme}
    driver-class-name: com.mysql.cj.jdbc.Driver
    hikari:
      minimum-idle: 10
      maximum-pool-size: 50
      connection-timeout: 30000
      idle-timeout: 600000
      max-lifetime: 1800000
      pool-name: BlogHikariCP

  jpa:
    hibernate:
      ddl-auto: none
    show-sql: false
    properties:
      hibernate:
        format_sql: false
        dialect: org.hibernate.dialect.MySQL8Dialect
    open-in-view: false

  flyway:
    enabled: true
    baseline-on-migrate: true
    locations: classpath:db/migration
    encoding: UTF-8
    validate-on-migrate: true

  data:
    redis:
      host: ${REDIS_HOST:localhost}
      port: ${REDIS_PORT:6379}
      password: ${REDIS_PASSWORD:}
      database: 0
      timeout: 3000ms
      lettuce:
        pool:
          max-active: 20
          max-idle: 10
          min-idle: 5
          max-wait: 1000ms

  cache:
    type: redis
    redis:
      time-to-live: 300000

server:
  port: ${SERVER_PORT:8080}
  shutdown: graceful
  compression:
    enabled: true

blog:
  base-url: ${BLOG_BASE_URL:https://example.com}

  data:
    path: ${BLOG_DATA_PATH:/var/blog-data}

  cors:
    allowed-origins: '*'
    allowed-methods: GET,POST,PUT,DELETE,OPTIONS
    allowed-headers: '*'
    allow-credentials: false
    max-age: 3600

logging:
  level:
    root: INFO
    com.blog: INFO
    org.springframework.web: WARN
    org.hibernate: WARN
